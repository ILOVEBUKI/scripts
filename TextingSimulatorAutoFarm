getgenv().autofarm = true; -- set this to false and then put -[[ in while check line 3 for explaination
--[[
FOR EXAMPLE: --[[getgenv().autofarm = false;

while wait() do
    if getgenv().autofarm == true then
        game:Service('ReplicatedStorage')Events.SendTexts:FireServer("Phone");
    end
end--]]

-- script
while wait() do -- avoid freezing the game while autofarming
    if getgenv().autofarm == true then -- check if its true or not
        game:Service('ReplicatedStorage')Events.SendTexts:FireServer("Phone"); -- fire the event
    end
end
